
{{#if customer}}
    <h1>Welcome {{customer.name}}</h1><br>
    <div id="chart"></div>
<script>
    a=['tanklevel'];
    {{#if harddata}}
        {{#each harddata}}
            a.push({{this.value}});
        {{/each}}
    {{/if}}
    console.log(a);
    var chart = c3.generate({
    bindto: '#chart',
    data: {
        columns: [a],
        colors: {
            data1: '#7FFF00'
        }
    }
    
});


</script>
    {{#if merchent}}
        {{#each merchent}}
        <div class="merchentlist">
            <h3>{{this.service}}</h3>
            <form method="post" action="/customer/join">
                <input type="hidden" name="merchentjoin" value={{this.phonenumber}} >
                <input type="hidden" name="customer" value={{../customer.phonenumber}} >
                 
                <button type="submit">JOIN</button>
            </form>
            
            <button type="button">ORDER</button>
        </div>
        <br>
            
        {{/each}}
    {{/if}}
{{/if}}